<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="6dp"
    app:cardElevation="4dp"
>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lecture_list_img"
            android:layout_width="47dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_change16_19"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="@dimen/dp_change16_19" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp">

            <TextView
                android:id="@+id/lecture_list_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nanum_square_regular"
                android:gravity="right"
                android:text="123"
                android:textColor="@color/pageCountTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lecture_list_name_tv"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lecture_list_num_tv"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/font_nanum_square_bold"
                android:maxLines="2"
                android:gravity="right"
                android:text="dfasdfasdf"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/sp_change18_21" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>