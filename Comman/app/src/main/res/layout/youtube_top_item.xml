<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lectureVideo_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtube_bottom_bar_layout"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/nanum_square_regular"
        android:text="라이노 위주의 툴 수업이며...블라블라블라블라..."
        android:textColor="@color/pageCountTextColor"
        android:textSize="19sp" />

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/lectureVideo_content_tv"
        android:layout_marginTop="30dp"
        android:background="@color/divideLineColor" />

</RelativeLayout>