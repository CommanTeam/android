<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lecture_subsection_course_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:paddingLeft="19dp"
    android:paddingRight="19dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lecture_subsection_course_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/nanum_square_bold"
            android:text="강좌 설명"
            android:textColor="@color/mainTextColor"
            android:textSize="21dp" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lecture_subsection_course_title_tv"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="177dp"
                android:background="@drawable/lecture_subsection_course_item_bg">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lecture_subsection_course_profile_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="23dp"
                    android:src="@mipmap/ic_launcher" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="91dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_bold"
                            android:text="강좌"
                            android:textColor="@color/grayMainTextColor"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/lecture_subsection_course_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/nanum_square_bold"
                            android:text="[Rhino] 반지 모델링하기"
                            android:textColor="@color/mainTextColor"
                            android:textSize="21sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lecture_subsection_course_name_tv"
                        android:layout_marginLeft="91dp"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_bold"
                            android:text="강사"
                            android:textColor="@color/grayMainTextColor"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/lecture_subsection_instructor_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/nanum_square_bold"
                            android:text="박명선"
                            android:textColor="@color/mainTextColor"
                            android:textSize="21sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lecture_subsection_course_popup_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lecture_subsection_bar_iv"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="98dp"
                        android:background="@color/divideLineColor" />

                    <TextView
                        android:id="@+id/lecture_subsection_course_popup_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="더 보기" />

                    <LinearLayout
                        android:id="@+id/lecture_subsection_popup_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/lecture_subsection_bar2_iv"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/divideLineColor" />

                        <TextView
                            android:id="@+id/lecture_subsection_course_popup_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="9dp"
                            android:fontFamily="@font/nanum_square_bold"
                            android:text="더 보기" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/lecture_subsection_bar3_iv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="254dp"
            android:background="@color/divideLineColor" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lecture_subsection_bar3_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="20dp"
            app:cardElevation="@dimen/shadow">

            <Button
                android:id="@+id/lecture_regist_btn"
                android:layout_width="198dp"
                android:layout_height="60dp"
                android:background="@drawable/frag_quiz_submitbtn_bg"
                android:fontFamily="@font/nanum_square_bold"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
