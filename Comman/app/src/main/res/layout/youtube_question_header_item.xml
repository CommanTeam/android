<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="12dp"
        android:text="질문"
        android:textSize="18sp"
        android:textColor="@color/mainTextColor"
        android:fontFamily="@font/nanum_square_bold"
        />

    <TextView
        android:id="@+id/youtube_question_item_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/question"
        android:text="0개"
        android:textSize="18sp"
        android:textColor="@color/mainTextColor"
        android:fontFamily="@font/nanum_square_regular"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/youtube_question_item_cnt_tv"
        android:layout_toLeftOf="@id/question_item_regist_btn"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/youtube_search_btn_bg"
        />

    <EditText
        android:id="@+id/youtube_question_item_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtube_question_item_cnt_tv"
        android:layout_toLeftOf="@id/question_item_regist_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="107dp"
        android:hint="검색어를 입력해주세요."
        android:fontFamily="@font/nanum_square_regular"
        android:backgroundTint="@color/white"
        android:textSize="17sp"
        />

    <Button
        android:id="@+id/youtube_question_item_regist_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/youtube_question_item_cnt_tv"
        android:background="@color/primaryColor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:layout_marginTop="12dp"
        android:text="등록"
        android:fontFamily="@font/nanum_square_bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        />




</RelativeLayout>