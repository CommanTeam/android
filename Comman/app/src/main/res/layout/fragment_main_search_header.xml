    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText
            android:id="@+id/main_search_et"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        
    </RelativeLayout>

</LinearLayout>