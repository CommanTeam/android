<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context="org.appjam.comman.ui.CourseSubsection.CourseSubActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/lecture_subsection_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/primaryColor">
        <Button
            android:id="@+id/sub_back_btn"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="19dp"
            android:background="@drawable/title_back_btn"
            android:layout_width="13dp"
            android:layout_height="19dp"
            android:backgroundTint="#ffffff"/>
        <TextView
            android:id="@+id/sub_lecture_name_tv"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Rhino] 반지 모델링 하기"
            android:fontFamily="@font/nanum_square_bold"
            android:textSize="21sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lecture_subsection_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lecture_subsection_top_layout"
            app:layoutManager="LinearLayoutManager"
            android:background="@color/backgroundColor">
        </android.support.v7.widget.RecyclerView>
</RelativeLayout>