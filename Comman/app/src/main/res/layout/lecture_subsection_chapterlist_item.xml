<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="6dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/pageCountTextColor">

            <TextView
                android:id="@+id/lecture_subsection_chapterlist_chapnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/nanum_square_bold"
                android:text="1장"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lecture_subsection_chapterlist_totalnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/nanum_square_bold"
                android:text="총 16강"
                android:textColor="@color/divideLineColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lecture_subsection_chapterlist_chapname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lecture_subsection_chapterlist_chapnum_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/nanum_square_bold"
                android:text="라이노 툴 다루기"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <RelativeLayout
                android:id="@+id/lecture_subsection_lock_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:alpha="0.4"
                android:background="@color/black">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/lock_icon"
                    android:tint="@color/white" />
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>