<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_centerHorizontal="true">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_marginHorizontal="16dp"
      android:background="@color/pageCountTextColor"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/lecture_subsection_chapterlist_chapnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1장"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_square_bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="13dp"/>
    <TextView
        android:id="@+id/lecture_subsection_chapterlist_totalnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 16강"
        android:textSize="15sp"
        android:textColor="@color/divideLineColor"
        android:fontFamily="@font/nanum_square_bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="13dp"
        />
    <TextView
        android:id="@+id/lecture_subsection_chapterlist_chapname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라이노 툴 다루기"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_square_bold"
        android:layout_below="@+id/lecture_subsection_chapterlist_chapnum_tv"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/lecture_subsection_lock_layout"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_marginHorizontal="16dp"
      android:background="@color/black"
      android:alpha="0.4"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_centerHorizontal="true">
    <ImageView
        android:layout_width="37dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:tint="@color/white"
        android:background="@drawable/lock_icon"/>
  </RelativeLayout>
</RelativeLayout>