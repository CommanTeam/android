<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="9dp"
    android:layout_marginTop="9dp"
    android:layout_marginRight="11dp"
    android:layout_marginLeft="11dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/course_result_img"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:background="@drawable/course_search_result_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/course_result_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_square_bold"
                android:text="모바일 결제 기초"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/sp_change16_19" />

            <TextView
                android:id="@+id/course_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_square_regular"
                android:lineSpacingMultiplier="1.2"
                android:text="오십자제한오십자제한오십자제한오십자제한오십자제한"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/course_people_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                android:text="13.2 천 명이 수강 중입니다."
                android:textColor="@color/pageCountTextColor"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>