<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/backgroundColor">
    <TextView
        android:id="@+id/lecture_subsection_course_exp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강좌 설명"
        android:textSize="18dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/font_nanum_square_bold"
        android:textColor="@color/mainTextColor"
         />
    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="138dp"
        android:layout_below="@id/lecture_subsection_course_exp_tv"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lecture_subsection_course_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="17dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강좌"
            android:textSize="18sp"
            android:textColor="@color/grayMainTextColor"
            android:fontFamily="@font/nanum_square_bold"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Rhino] 반지 모델링하기"
                android:textSize="18sp"
                android:textColor="@color/mainTextColor"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lecture_subsection_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/lecture_subsection_course_name_tv"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강사"
                android:textSize="18sp"
                android:textColor="@color/grayMainTextColor"
                android:fontFamily="@font/nanum_square_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박명선"
                android:textSize="18sp"
                android:textColor="@color/mainTextColor"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>
        </LinearLayout>
            <ImageView
                android:id="@+id/lecture_subsection_bar"
                android:layout_width="302dp"
                android:layout_height="1dp"
                android:background="@color/divideLineColor"
                android:layout_marginTop="84dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="96dp"
                android:text="라이노 위주의 툴 수업이며..블라블라블라블블....."
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/lecture_subsection_bar2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="@color/divideLineColor"
                />

            <Button
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="155dp"
                android:background="@drawable/additional_explanation_btn"/>
        </LinearLayout>
        </LinearLayout>
   </RelativeLayout>
</RelativeLayout>