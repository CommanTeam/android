<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.appjam.comman.ui.courseNonRegist.EnrollPopupActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/enrollment_charge_check_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:fontFamily="@font/nanum_square_bold"
        android:gravity="center"
        android:text="등록 하시겠습니까?"
        android:textColor="@color/mainTextColor"
        android:textSize="21sp" />
</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/upper_shadow_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            app:sl_cornerRadius="2dp"
            app:sl_dx="2dp"
            app:sl_dy="2dp"
            app:sl_shadowColor="@color/default_shadow_color">

            <Button
                android:id="@+id/enroll_ok_btn"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_2dp_btn_bg"
                android:fontFamily="@font/nanum_square_bold"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </com.dd.ShadowLayout>

        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="20dp"
            app:sl_cornerRadius="2dp"
            app:sl_dx="2dp"
            app:sl_dy="2dp"
            app:sl_shadowColor="@color/default_shadow_color">

            <Button
                android:id="@+id/enroll_close_btn"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_2dp_btn_bg"
                android:fontFamily="@font/nanum_square_bold"
                android:text="닫기"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </com.dd.ShadowLayout>
    </LinearLayout>
</LinearLayout>
