<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">
<Button
    android:id="@+id/lecture_regist_btn"
    android:layout_width="170dp"
    android:layout_height="50dp"
    android:background="@drawable/frag_quiz_submitbtn_bg"
    android:text="등록하기"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:fontFamily="@font/nanum_square_bold"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="17dp"
    android:layout_marginBottom="22dp"/>
    <ImageView
        android:id="@+id/lecture_regist_bar_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="89dp"
        android:background="@color/divideLineColor"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/lecture_regist_chapterlist_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단원 목록"
        android:layout_below="@+id/lecture_regist_btn"
        android:textSize="18sp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/nanum_square_bold"
        android:textColor="@color/mainTextColor"/>
    <Button
        android:id="@+id/lecture_charge_btn"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/lecture_regist_btn"
        android:text="강좌 구매"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_square_bold"
        android:textSize="15sp"
        android:background="@drawable/frag_quiz_submitbtn_bg"/>
</RelativeLayout>