<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="19dp"
    android:layout_marginRight="19dp"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/main_lecture_wathing_tv"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시청하던 강의"
        android:textSize="21dp"
        android:textColor="@color/mainTextColor"
        android:fontFamily="@font/nanum_square_bold"
        />
<android.support.v7.widget.CardView
    android:id="@+id/main_lecture_wathing_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/main_lecture_wathing_tv"
    android:layout_marginTop="16dp"
    app:cardElevation="@dimen/shadow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:orientation="vertical"
        android:background="@drawable/main_lecture_watching_bg">

        <RelativeLayout
            android:id="@+id/main_lecture_watching_back"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@drawable/main_lecture_image_bg">
            <ImageView
                android:id="@+id/main_lecture_wathing_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/home_quiz_icon" />

            <TextView
                android:id="@+id/main_lecture_watching_progress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="13dp"
                android:text="50 / 100"
                android:textColor="@color/divideLineColor"
                android:textSize="15sp"
                android:fontFamily="@font/nanum_square_regular"
                />

            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/main_lecture_watching_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_alignParentBottom="true"
                android:progress="50"
                android:progressTint="@color/primaryColor"
                android:background="@color/progressBackgroundColor"
                android:visibility="gone"
                />


        </RelativeLayout>

        <TextView
            android:layout_marginTop="19dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:id="@+id/main_course_wathing_chapter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무슨 강좌 > 01 챕터"
            android:textSize="16sp"
            android:textColor="@color/grayMainTextColor"
            android:fontFamily="@font/nanum_square_regular"
            />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/main_course_wathing_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="[Rhino] 반지 모델링하기"
            android:textSize="21sp"
            android:textColor="@color/mainTextColor"
            android:fontFamily="@font/nanum_square_bold"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>
    <TextView
        android:layout_below="@id/main_lecture_wathing_layout"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수강중인 강좌"
        android:textSize="21sp"
        android:textColor="@color/mainTextColor"
        android:fontFamily="@font/nanum_square_bold"
        />


</RelativeLayout>