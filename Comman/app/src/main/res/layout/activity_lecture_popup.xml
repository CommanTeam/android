<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:orientation="vertical"
    tools:context="org.appjam.comman.ui.lectureSubsection.LectureSubPopupActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="29dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lecturePopup_img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lecturePopup_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/nanum_square_bold"
                android:text="[Rhino] 반지 모델링하기"
                android:textColor="@color/mainTextColor"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/lecturePopup_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/nanum_square_regular"
                android:text="강사명"
                android:textColor="@color/grayMainTextColor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divideLineColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lecture_popup_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarSize="6dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="vertical"/>
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/lecture_popup_btn"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:background="@color/primaryColor"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="230dp"
            android:text="닫기"
            android:fontFamily="@font/nanum_square_bold"
            android:textSize="19dp"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>